---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE_TITLE } from "@consts";
import "@styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Condensed:ital,wght@0,500;0,600;0,700;1,500;1,600;1,700&family=IBM+Plex+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <title>{SITE_TITLE} | {pageTitle}</title>
    <ViewTransitions />
  </head>
  <body class="flex flex-col gap-6 min-h-screen max-w-prose min-w-80 mx-auto px-4">
    <Header transition:persist/>
    <main class="flex-1" transition:animate="fade">
      <h1 class="text-4xl font-bold mb-8">{pageTitle}</h1>
      <slot />
    </main>
    <Footer transition:persist/>
  </body>
</html>
